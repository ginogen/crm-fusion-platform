{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "src/pages/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook/(.*)",
      "dest": "/src/pages/api/webhook/[token].ts"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "/src/pages/api/admin/$1"
    },
    {
      "src": "/api/reports/(.*)",
      "dest": "/src/pages/api/reports/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 